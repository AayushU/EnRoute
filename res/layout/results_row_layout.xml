<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/label"
        android:textSize="30px" >
    </TextView>

    <LinearLayout
        android:id="@+id/resultPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/resultName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label2"
            android:textSize="30px" />

        <TextView
            android:id="@+id/resultDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label3"
            android:textSize="30px" />

        <TextView
            android:id="@+id/resultOffRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label4"
            android:textSize="30px" />

        <TextView
            android:id="@+id/resultPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label5"
            android:autoLink="all"
            android:textSize="30px" />

        <Button
            android:id="@+id/directions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/directions"
            android:onClick="showDirections" >
        </Button>
    </LinearLayout>

</LinearLayout>